<!DOCTYPE html>
<html>
<body>

<?php
$num = 100;  
$factorial = 1;  
for ($x=$num; $x>=1; $x--)   
{  
  $factorial = $factorial * $x; 
}  

echo "Factorial of $num is $factorial. \n";

$length = strlen($factorial);
echo "length is $length. \n";

$fact = "$factorial";
for($i = 0; $i < $length; $i++)
{
	$total += $fact[$i];
}

echo "total is $total";
?>

</body>
</html>
